---
import BaseLayout from '@layouts/BaseLayout.astro';
import CLIAppCard from '@components/CLIAppCard.astro';
import openSourceData from '../data/opensource.json';

const pageTitle = 'CLI Tools | Marcus Ziadé';
const pageDescription =
  'Command-line tools and utilities for developers. Built with Go and Swift for productivity, automation, and making terminal life better.';

// Filter to get only CLI Tools, sort by stars
const cliTools = openSourceData.projects
  .filter((project) => project.category === 'CLI Tools')
  .sort((a, b) => b.stars - a.stars);

// Add pomme if it's not already in the list
const hasPomme = cliTools.some((tool) => tool.name.toLowerCase() === 'pomme');
if (!hasPomme) {
  cliTools.unshift({
    id: 'pomme',
    name: 'Pomme',
    description:
      'Beautiful App Store Connect CLI for sales reports, analytics, and reviews. Built with Go.',
    language: 'Go',
    platforms: ['macOS', 'Linux', 'Windows'],
    stars: 0, // Will be fetched from GitHub
    githubUrl: 'https://github.com/marcusziade/Pomme',
    category: 'CLI Tools',
    highlights: ['App Store', 'Analytics', 'Reviews'],
    topics: ['cli', 'go', 'app-store-connect', 'ios', 'analytics'],
    commitCount: 0,
  });
}

// Add speedrun-cli if not in list
const hasSpeedrun = cliTools.some((tool) => tool.name.toLowerCase() === 'speedrun-cli');
if (!hasSpeedrun) {
  cliTools.push({
    id: 'speedrun-cli',
    name: 'speedrun-cli',
    description:
      'CLI client for speedrun.com. Browse games, categories, and leaderboards from your terminal.',
    language: 'Go',
    platforms: ['macOS', 'Linux', 'Windows'],
    stars: 0,
    githubUrl: 'https://github.com/marcusziade/speedrun-cli',
    category: 'CLI Tools',
    highlights: [],
    topics: ['cli', 'go', 'speedrun', 'gaming'],
    commitCount: 27,
  });
}

// Add apod-cli if not in list
const hasApod = cliTools.some((tool) => tool.name.toLowerCase() === 'apod-cli');
if (!hasApod) {
  cliTools.push({
    id: 'apod-cli',
    name: 'apod-cli',
    description: 'A command-line tool to browse the NASA Astronomy Picture of the Day archive.',
    language: 'Go',
    platforms: ['macOS', 'Linux', 'Windows'],
    stars: 6,
    githubUrl: 'https://github.com/marcusziade/apod-cli',
    category: 'CLI Tools',
    highlights: ['Homebrew available'],
    topics: ['cli', 'go', 'nasa', 'astronomy', 'space'],
    commitCount: 37,
  });
}

// Add more CLI tools that likely have 25+ commits
const additionalTools = [
  {
    id: 'starcraftcli',
    name: 'starcraftcli',
    description: 'Command-line interface for StarCraft data and analytics.',
    language: 'Swift',
    platforms: ['macOS', 'Linux'],
    stars: 0,
    githubUrl: 'https://marcusziade.github.io/StarCraftKit/',
    category: 'CLI Tools',
    highlights: ['StarCraft analytics', 'Real-time data'],
    topics: ['cli', 'swift', 'starcraft', 'analytics'],
    commitCount: 62,
  },
  {
    id: 'igscraper',
    name: 'igscraper',
    description: 'Instagram scraper CLI tool for downloading posts, stories, and user data.',
    language: 'Go',
    platforms: ['macOS', 'Linux', 'Windows'],
    stars: 0,
    githubUrl: 'https://marcusziade.github.io/igscraper/',
    category: 'CLI Tools',
    highlights: [],
    topics: ['cli', 'go', 'instagram', 'scraper'],
    commitCount: 25,
  },
  {
    id: 'geminicli',
    name: 'GeminiCLI',
    description:
      'Command-line interface for Google Gemini AI. Chat with Gemini from your terminal.',
    language: 'Swift',
    platforms: ['macOS', 'Linux'],
    stars: 0,
    githubUrl: 'https://github.com/marcusziade/GeminiKit',
    category: 'CLI Tools',
    highlights: [],
    topics: ['cli', 'swift', 'ai', 'gemini', 'llm'],
    commitCount: 30,
  },
  {
    id: 'swollamacli',
    name: 'SwollamaCLI',
    description:
      'Swift CLI for Ollama. Run local LLMs from your terminal with a native Swift interface.',
    language: 'Swift',
    platforms: ['macOS', 'Linux'],
    stars: 0,
    githubUrl: 'https://github.com/marcusziade/Swollama',
    category: 'CLI Tools',
    highlights: [],
    topics: ['cli', 'swift', 'ai', 'ollama', 'llm'],
    commitCount: 45,
  },
];

// Add additional tools if they're not already in the list
additionalTools.forEach((tool) => {
  if (!cliTools.some((t) => t.name.toLowerCase() === tool.name.toLowerCase())) {
    cliTools.push(tool);
  }
});

// Sort by latest commit date (updatedAt)
cliTools.sort((a, b) => {
  const dateA = a.updatedAt ? new Date(a.updatedAt).getTime() : 0;
  const dateB = b.updatedAt ? new Date(b.updatedAt).getTime() : 0;
  return dateB - dateA;
});

// Create structured data for SEO
const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: pageTitle,
  description: pageDescription,
  url: 'https://compiledthoughts.pages.dev/cli-tools/',
  author: {
    '@type': 'Person',
    name: 'Marcus Ziadé',
    url: 'https://compiledthoughts.pages.dev',
  },
  hasPart: cliTools.map((tool) => ({
    '@type': 'SoftwareApplication',
    name: tool.name,
    description: tool.description,
    applicationCategory: 'DeveloperApplication',
    operatingSystem: tool.platforms.join(', '),
    programmingLanguage: tool.language,
    url: tool.githubUrl,
  })),
};
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <div class="w-full px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
      <header class="text-center mb-8 sm:mb-12">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">CLI Tools</h1>
        <p
          class="text-base sm:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-4 px-2"
        >
          Developer tools for the command line. Built with Go and Swift.
        </p>
        <div class="flex gap-3 sm:gap-4 justify-center">
          <a
            href="https://github.com/marcusziade?tab=repositories&q=cli"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-3 sm:px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors duration-200 text-sm sm:text-base"
          >
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            View on GitHub
          </a>
        </div>
      </header>

      <section class="max-w-[1600px] mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 2xl:grid-cols-3 gap-6 lg:gap-8">
          {cliTools.map((tool) => <CLIAppCard project={tool} />)}
        </div>
      </section>

      <section class="mt-12 sm:mt-16 text-center">
        <a
          href="https://github.com/marcusziade?tab=repositories&q=cli"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 sm:px-6 py-2.5 sm:py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-all duration-200 text-sm sm:text-base"
        >
          Explore All CLI Projects
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </a>
      </section>
    </div>
  </main>

  <!-- Structured data for better SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .grid > * {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .grid > *:nth-child(1) {
    animation-delay: 0.1s;
  }
  .grid > *:nth-child(2) {
    animation-delay: 0.2s;
  }
  .grid > *:nth-child(3) {
    animation-delay: 0.3s;
  }
  .grid > *:nth-child(4) {
    animation-delay: 0.4s;
  }
  .grid > *:nth-child(5) {
    animation-delay: 0.5s;
  }
  .grid > *:nth-child(6) {
    animation-delay: 0.6s;
  }
  .grid > *:nth-child(7) {
    animation-delay: 0.7s;
  }
  .grid > *:nth-child(8) {
    animation-delay: 0.8s;
  }
  .grid > *:nth-child(9) {
    animation-delay: 0.9s;
  }
</style>
