---
import BaseLayout from '@layouts/BaseLayout.astro';
import AppCard from '@components/AppCard.astro';
import appsData from '../data/apps.json';

const pageTitle = 'Apps';
const pageDescription =
  'Explore my portfolio of applications for Apple platforms - iPhone, iPad, Mac, and Apple TV. Featuring machine learning, productivity tools, and innovative experiences.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <div class="container mx-auto px-4 py-8">
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Apple Platform Apps</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
          I develop applications across the entire Apple ecosystem - from iPhone and iPad to Mac and
          Apple TV. Each app leverages platform-specific capabilities to deliver exceptional user
          experiences, whether it's machine learning on macOS, immersive visuals on Apple TV, or
          innovative mobile experiences on iOS.
        </p>
      </header>

      <section>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {appsData.apps.map((app) => <AppCard app={app} />)}
        </div>
      </section>

      <section class="mt-16 text-center">
        <div
          class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8"
        >
          <h3 class="text-2xl font-bold mb-4">Want to collaborate?</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            I'm always interested in working on innovative projects. Let's build something amazing
            together.
          </p>
          <a
            href="/links"
            class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors duration-200"
          >
            Get in Touch
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .grid > * {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .grid > *:nth-child(1) {
    animation-delay: 0.1s;
  }
  .grid > *:nth-child(2) {
    animation-delay: 0.2s;
  }
  .grid > *:nth-child(3) {
    animation-delay: 0.3s;
  }
  .grid > *:nth-child(4) {
    animation-delay: 0.4s;
  }
</style>
