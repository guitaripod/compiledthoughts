---
import BaseLayout from '@layouts/BaseLayout.astro';
import OpenSourceCard from '@components/OpenSourceCard.astro';
import openSourceData from '../data/opensource.json';

const pageTitle = 'Open Source | Marcus ZiadÃ©';
const pageDescription =
  'CLI tools, Swift packages, and desktop applications for macOS, Linux, and cross-platform development.';

// Group projects by category
const projectsByCategory = openSourceData.projects.reduce(
  (acc, project) => {
    if (!acc[project.category]) {
      acc[project.category] = [];
    }
    acc[project.category].push(project);
    return acc;
  },
  {} as Record<string, typeof openSourceData.projects>
);

const categories = Object.keys(projectsByCategory);
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main>
    <div class="container mx-auto px-4 py-8">
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Open Source</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-4">
          Building tools that make developers' lives easier. CLI utilities, Swift packages, and
          desktop apps for macOS, Linux, and beyond. Everything is open source and available on
          GitHub.
        </p>
        <div class="flex gap-4 justify-center">
          <a
            href="https://github.com/marcusziade"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors duration-200"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            View on GitHub
          </a>
        </div>
      </header>

      {
        categories.map((category) => (
          <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">{category}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {projectsByCategory[category].map((project) => (
                <OpenSourceCard project={project} />
              ))}
            </div>
          </section>
        ))
      }

      <section class="mt-16 text-center">
        <div
          class="bg-gradient-to-r from-green-50 to-blue-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8"
        >
          <h3 class="text-2xl font-bold mb-4">Contributing to Open Source</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            I believe in building tools that solve real problems. If you find my projects useful,
            consider starring them on GitHub or contributing improvements.
          </p>
          <a
            href="https://github.com/marcusziade?tab=repositories"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors duration-200"
          >
            Explore All Projects
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
