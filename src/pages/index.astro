---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 10);
---

<BaseLayout title="Compiled Thoughts" description="Thoughts on software engineering and technology">
  <div class="py-8">
    <section class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        Welcome to Compiled Thoughts
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300">
        A collection of articles about software development, programming languages, and modern web
        technologies.
      </p>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">Recent Posts</h2>

      <div class="space-y-8">
        {
          posts.map((post) => {
            const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            });

            return (
              <article class="group">
                <a href={`/blog/${post.slug}`} class="block">
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-300">{post.data.description}</p>
                  <div class="mt-2 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-500">
                    <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
                    {post.data.tags.length > 0 && (
                      <div class="flex gap-2">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="text-blue-600 dark:text-blue-400">#{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </article>
            );
          })
        }
      </div>

      {
        posts.length === 0 && (
          <p class="text-gray-600 dark:text-gray-400">No posts yet. Check back soon!</p>
        )
      }

      {
        posts.length === 10 && (
          <div class="mt-12 text-center">
            <a
              href="/archive"
              class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:underline"
            >
              View all posts
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        )
      }
    </section>
  </div>
</BaseLayout>
