---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).filter((post) => !post.data.draft);

// Extract all unique tags
const tagCounts = posts.reduce(
  (acc, post) => {
    post.data.tags.forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1;
    });
    return acc;
  },
  {} as Record<string, number>
);

const tags = Object.entries(tagCounts)
  .sort(([, a], [, b]) => b - a)
  .map(([tag, count]) => ({ tag, count }));
---

<BaseLayout title="Tags - Compiled Thoughts" description="Browse all blog post tags">
  <div class="py-8">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-8">Tags</h1>

    {
      tags.length > 0 ? (
        <div class="flex flex-wrap gap-4">
          {tags.map(({ tag, count }) => (
            <a
              href={`/tags/${tag}`}
              class="group flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              <span class="text-lg font-medium text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400">
                #{tag}
              </span>
              <span class="text-sm text-gray-500 dark:text-gray-500">({count})</span>
            </a>
          ))}
        </div>
      ) : (
        <p class="text-gray-600 dark:text-gray-400">No tags found yet.</p>
      )
    }
  </div>
</BaseLayout>
