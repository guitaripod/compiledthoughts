---
export interface Props {
  id: string;
  name: string;
  tagline: string;
  icon: string;
  primaryColor: string;
  platforms: string[];
  appStoreUrl: string;
}

const { id, name, tagline, icon, primaryColor, platforms, appStoreUrl } = Astro.props;

const platformIcons = {
  iPhone: 'ðŸ“±',
  iPad: 'ðŸ“±',
  Mac: 'ðŸ’»',
  'Apple TV': 'ðŸ“º',
};

const uniquePlatforms = [...new Set(platforms)];
---

<article
  class="group relative bg-white dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-all duration-300 hover:shadow-lg"
>
  <a href={appStoreUrl} target="_blank" rel="noopener noreferrer" class="block">
    <div class="flex items-start gap-4">
      <img
        src={icon}
        alt={`${name} icon`}
        width="60"
        height="60"
        class="rounded-2xl shadow-sm"
        loading="lazy"
      />
      <div class="flex-1 min-w-0">
        <h3
          class="font-semibold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
        >
          {name}
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1 line-clamp-2">
          {tagline}
        </p>
        <div class="flex items-center gap-2 mt-2">
          {
            uniquePlatforms.map((platform) => (
              <span class="text-xs text-gray-500 dark:text-gray-500">
                {platformIcons[platform] || 'ðŸ“±'} {platform}
              </span>
            ))
          }
        </div>
      </div>
    </div>
    <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
      <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
    </div>
  </a>
</article>
